layout-macro-def(RecipeOneImage) {
  params {
    param (recipe) {
      type (Recipe)
      min (Required)
      max (One)
    }
  }
  
  content {
    section {
      content {
        image {
          aspect-ratio (21:9)
          url ("[#{value(recipe.image.url)}]")
        }
      }
    }
  }
}
