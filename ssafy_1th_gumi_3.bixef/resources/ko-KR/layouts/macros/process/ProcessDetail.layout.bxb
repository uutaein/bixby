layout-macro-def(ProcessDetail) {
  params {
    param (process) {
      type (Process)
      min (Required)
      max (One)
    }
  }

  content {
    section {  // this macro returns a "section"
      content {
        paragraph {
          value ("#{value(process.description)} #{value(process.currentStep)}")
          style (Detail_M)
        }
      }
    }
  }
}
