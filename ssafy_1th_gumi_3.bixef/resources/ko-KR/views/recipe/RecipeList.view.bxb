result-view{
  match: RecipeBasicStructure(result){
    min (Required) max (Many)
  }

  render{
    layout{
      section{
        content{
          for-each(result){
            as(item){
              layout-macro (RecipeSummaryLarge){
                param(recipeBasicStructure){
                  expression (item)
                }
              }
            }
          }
        }
      }
    }
  }
}